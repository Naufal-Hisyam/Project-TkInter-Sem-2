import tkinter as tk
from tkinter import messagebox

class AplikasiTkinter:
    def __init__(self, root):
        self.root = root
        self.root.title("Basketball Score")
        self.root.geometry("500x500")
        self.root.resizable(True, True)

        self.skor_a = 0
        self.skor_b = 0

        self.frame_awal = tk.Frame(self.root)
        self.frame_awal.place(relx=0.5, rely=0.5, anchor="center")

        self.label_judul = tk.Label(self.frame_awal, text="Selamat Datang di Basketball Score", font=("Helvetica", 14))
        self.label_judul.pack(pady=10)

        self.btn_mulai = tk.Button(self.frame_awal, text="Start", width=20, height=2, command=self.mulai_aplikasi)
        self.btn_mulai.pack(pady=10)

        self.btn_developer = tk.Button(self.frame_awal, text="Developer", width=20, height=2, command=self.tampilkan_developer)
        self.btn_developer.pack(pady=20)

        self.btn_quit = tk.Button(self.frame_awal, text="Quit", width=20, height=2, command=self.root.quit)
        self.btn_quit.pack(pady=10)

        self.frame_skor = tk.Frame(self.root)

        self.label_a = tk.Label(self.frame_skor, text="Team A: 0", font=("Helvetica", 20))
        self.label_a.pack(padx=5, pady=10)

        tk.Button(self.frame_skor, text="+1 A", command=self.tambah_1_a).pack(padx=50, pady=5)
        tk.Button(self.frame_skor, text="+3 A", command=self.tambah_3_a).pack(padx=5, pady=5)

        self.label_b = tk.Label(self.frame_skor, text="Team B: 0", font=("Helvetica", 20))
        self.label_b.pack(pady=10)

        tk.Button(self.frame_skor, text="+1 B", command=self.tambah_1_b).pack(pady=5)
        tk.Button(self.frame_skor, text="+3 B", command=self.tambah_3_b).pack(pady=5)

        tk.Button(self.frame_skor, text="Reset", command=self.reset).pack(pady=10)
        tk.Button(self.frame_skor, text="Simpan Skor", command=self.simpan_skor).pack(pady=10)
        tk.Button(self.frame_skor, text="Kembali", command=self.kembali_ke_awal).pack(pady=10)

        self.frame_developer = tk.Frame(self.root)
        self.label_developer = tk.Label(self.frame_developer, text="Dibuat oleh Kelompok 7", font=("Helvetica", 14))
        self.label_developer.pack(pady=10)
        self.label_developer_a = tk.Label(self.frame_developer, text="Althaf Zabran\nMuhammad Sulthan Chaniago\nNaufal Hisyam Attosy\nNicholas Deva Yaman", font=("Helvetica", 14))
        self.label_developer_a.pack(pady=10)
        tk.Button(self.frame_developer, text="Kembali", command=self.kembali_ke_awal).pack(pady=10)

    def mulai_aplikasi(self):
        self.frame_awal.place_forget()
        self.frame_developer.pack_forget()
        self.frame_skor.pack(pady=10)

    def tampilkan_developer(self):
        self.frame_awal.place_forget()
        self.frame_skor.pack_forget()
        self.frame_developer.pack(pady=10)

    def kembali_ke_awal(self):
        self.frame_developer.pack_forget()
        self.frame_skor.pack_forget()
        self.frame_awal.place(relx=0.5, rely=0.5, anchor="center")

    def tambah_1_a(self):
        self.skor_a += 1
        self.label_a.config(text=f"Team A: {self.skor_a}")

    def tambah_3_a(self):
        self.skor_a += 3
        self.label_a.config(text=f"Team A: {self.skor_a}")

    def tambah_1_b(self):
        self.skor_b += 1
        self.label_b.config(text=f"Team B: {self.skor_b}")

    def tambah_3_b(self):
        self.skor_b += 3
        self.label_b.config(text=f"Team B: {self.skor_b}")

    def reset(self):
        self.skor_a = 0
        self.skor_b = 0
        self.label_a.config(text="Team A: 0")
        self.label_b.config(text="Team B: 0")

    def simpan_skor(self):
        skor_info = f"Skor Team A: {self.skor_a}\nSkor Team B: {self.skor_b}"
        messagebox.showinfo("Skor Disimpan", skor_info)

root = tk.Tk()
app = AplikasiTkinter(root)
root.mainloop()
