import tkinter as tk
from tkinter import messagebox
from PIL import Image, ImageTk

class AplikasiTkinter:
    def __init__(self, root):
        self.root = root
        self.root.title("Aplikasi Skor Sederhana")
        self.root.geometry("400x500")
        self.root.resizable(False, False)

        self.skor_a = 0
        self.skor_b = 0

        self.frame_awal = tk.Frame(self.root)
        self.frame_awal.place(relx=0.5, rely=0.5, anchor="center") 

        self.label_judul = tk.Label(self.frame_awal, text="Selamat Datang di Aplikasi Skor", font=("Helvetica", 14))
        self.label_judul.pack(pady=10)

        self.btn_mulai = tk.Button(self.frame_awal, text="Klik Untuk Memulai", command=self.mulai_aplikasi)
        self.btn_mulai.pack(pady=5)

        self.frame_skor = tk.Frame(self.root)

        self.label_a = tk.Label(self.frame_skor, text="Pemain A: 0", font=("Helvetica", 20))
        self.label_a.pack(pady=10)

        tk.Button(self.frame_skor, text="Tambah 1 Skor A", command=self.tambah_1_a).pack(pady=5)
        tk.Button(self.frame_skor, text="Tambah 3 Skor A", command=self.tambah_3_a).pack(pady=5)

        self.label_b = tk.Label(self.frame_skor, text="Pemain B: 0", font=("Helvetica", 20))
        self.label_b.pack(pady=10)

        tk.Button(self.frame_skor, text="Tambah 1 Skor B", command=self.tambah_1_b).pack(pady=5)
        tk.Button(self.frame_skor, text="Tambah 3 Skor B", command=self.tambah_3_b).pack(pady=5)

        tk.Button(self.frame_skor, text="Reset", command=self.reset).pack(pady=10)
        tk.Button(self.frame_skor, text="Simpan Skor", command=self.simpan_skor).pack(pady=10)

    def mulai_aplikasi(self):
        self.frame_awal.place_forget()  
        self.frame_skor.pack(pady=10)  

    def tambah_1_a(self):
        self.skor_a += 1
        self.label_a.config(text=f"Pemain A: {self.skor_a}")

    def tambah_3_a(self):
        self.skor_a += 3
        self.label_a.config(text=f"Pemain A: {self.skor_a}")

    def tambah_1_b(self):
        self.skor_b += 1
        self.label_b.config(text=f"Pemain B: {self.skor_b}")

    def tambah_3_b(self):
        self.skor_b += 3
        self.label_b.config(text=f"Pemain B: {self.skor_b}")

    def reset(self):
        self.skor_a = 0
        self.skor_b = 0
        self.label_a.config(text="Pemain A: 0")
        self.label_b.config(text="Pemain B: 0")

    def simpan_skor(self):
        skor_info = f"Skor Pemain A: {self.skor_a}\nSkor Pemain B: {self.skor_b}"
        messagebox.showinfo("Skor Disimpan", skor_info)

root = tk.Tk()
app = AplikasiTkinter(root)
root.mainloop()
