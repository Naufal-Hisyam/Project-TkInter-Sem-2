import tkinter as tk
from tkinter import messagebox
from PIL import Image, ImageTk

class AplikasiTkinter:
    def __init__(self, root):
        self.root = root
        self.root.title("Score Basketball")
        self.root.geometry("500x400")
        self.root.resizable(True, True)

        self.skor_a = 0
        self.skor_b = 0

        self.label_a = tk.Label(root, text="Pemain A: 0", font=("Helvetica", 20))
        self.label_a.pack(pady=10)

        self.btn_a = tk.Button(root, text="Tambah 1 Skor A", command=self.tambah_1_a)
        self.btn_a.pack(pady=5)

        self.btn_a = tk.Button(root, text="Tambah 3 Skor A", command=self.tambah_a)
        self.btn_a.pack(pady=5)

        self.btn_reset = tk.Button(root, text="Reset", command=self.reset)
        self.btn_reset.pack(pady=10)

        self.btn_b = tk.Button(root, text="Tambah 1 Skor B", command=self.tambah_1_b)
        self.btn_b.pack(pady=5)

        self.btn_b = tk.Button(root, text="Tambah 1 Skor B", command=self.tambah_b)
        self.btn_b.pack(pady=5)

        self.label_b = tk.Label(root, text="Pemain B: 0", font=("Helvetica", 20))
        self.label_b.pack(pady=10)


    def tambah_1_a(self):
        self.skor_a += 1
        self.label_a.config(text=f"Pemain A: {self.skor_a}")
    
    def tambah_1_b(self):
        self.skor_a += 1
        self.label_a.config(text=f"Pemain A: {self.skor_a}")

    def tambah_a(self):
        self.skor_a += 3
        self.label_a.config(text=f"Pemain A: {self.skor_a}")

    def tambah_b(self):
        self.skor_b += 3
        self.label_b.config(text=f"Pemain B: {self.skor_b}")

    def reset(self):
        self.skor_a = 0
        self.skor_b = 0
        self.label_a.config(text="Pemain A: 0")
        self.label_b.config(text="Pemain B: 0")

root = tk.Tk()
app = AplikasiTkinter(root)
root.mainloop()
